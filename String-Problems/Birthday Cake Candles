static int birthdayCakeCandles(int[] a) {

Arrays.sort(a);
        int longest = a[a.length - 1];
        int count = 0;
        for (int i = a.length - 1; i >= 0; i--) {
            if(longest==a[i]) {
                count++;
            }
            else {
                break;
            }
        }

        return count;

    }
